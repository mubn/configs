root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
max_line_length = 80
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 79

[Makefile]
indent_style = tab

[*.txt]
indent_style = tab
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false
